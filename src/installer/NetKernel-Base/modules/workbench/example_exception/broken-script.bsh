import org.ten60.netkernel.layer1.nkf.*;
import org.ten60.netkernel.layer1.representation.*;

/**
*	Example of Exception Stacktrace
*/
void main()
{	message=new StringAspect("Hello Exception Handling");

	throw new NKFException("Example Exception", "This is an example of an exception thrown from a script", null);
	//Issue response
	resp=context.createResponseFrom(message);
	resp.setMimeType("text/plain");		
	context.setResponse(resp);
}