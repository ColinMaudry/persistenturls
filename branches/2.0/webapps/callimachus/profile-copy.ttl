@prefix xsd:<http://www.w3.org/2001/XMLSchema#>.
@prefix rdf:<http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl:<http://www.w3.org/2002/07/owl#>.
@prefix skos:<http://www.w3.org/2004/02/skos/core#>.
@prefix dc:<http://purl.org/dc/elements/1.1/>.
@prefix dcterms:<http://purl.org/dc/terms/>.
@prefix obj:<http://www.openrdf.org/rdf/2009/object#>.
@prefix http:<http://www.openrdf.org/rdf/2009/httpobject#>.
@prefix calli:<http://callimachusproject.org/rdf/2009/framework#>.

calli:profile-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:operation "copy";
	http:type "text/html";
	obj:groovy "return findCopyProfile().constructAsHTML('copy', null, this);".

calli:profile-pre-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <java:java.io.InputStream>];
	http:operation "pre-copy";
	http:type "text/html";
	obj:groovy "return findCopyProfile().constructAsHTML('pre-copy', null, this);".

calli:profile-post-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom rdfs:Resource];
	http:method "POST";
	http:operation "copy";
	http:expect "201-created";
	obj:groovy "return copyDescription('copy', msg.in, findCopyPrefix().toString())".

calli:profile-post-pre-copy rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom rdfs:Resource];
	http:method "POST";
	http:operation "pre-copy";
	http:expect "201-created";
	obj:groovy "return copyDescription('pre-copy', msg.in, findCopyPrefix().toString())".

calli:profile-post-copy-in a owl:ObjectProperty; a owl:FunctionalProperty;
	rdfs:domain [owl:unionOf (calli:profile-post-copy calli:profile-post-pre-copy)];
	rdfs:range <java:java.io.InputStream>;
	http:type "application/rdf+xml";
	obj:name "in".

calli:find-copy-profile rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom <urn:mimetype:application/xml>];
	obj:name "findCopyProfile";
	obj:sparql "SELECT REDUCED ?profile WHERE { $this a [calli:copy ?profile] }".

calli:find-copy-prefix rdfs:subClassOf obj:Message;
	rdfs:subClassOf [owl:onProperty obj:target;
		owl:allValuesFrom calli:Copyable];
	rdfs:subClassOf [owl:onProperty obj:functionalObjectResponse;
		owl:allValuesFrom rdfs:Resource];
	obj:name "findCopyPrefix";
	obj:sparql "SELECT REDUCED ?prefix WHERE { $this a [calli:newPrefix ?prefix] }".
