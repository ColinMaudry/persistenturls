<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:purl="http://persistent.name/rdf/2010/purl#">
	<head>
		<title property="purl:name"/>
	</head>
	<body>
		<form action="">
			<fieldset>
				<legend>Modify a group</legend>
				<p class="instructions">Modify any of the following group information.</p>
				<table class="actiontable">
					<tbody>
						<tr>
							<td class="property">
								<label for="m_name">Name:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_name" property="purl:name" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_maintainer">Maintainer:</label>
							</td>
							<td class="value" data-min-cardinality="1">
                                <input id="m_maintainer" resource="?maintainer" rel="purl:maintainer" type="text" /> 
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_member">Members:</label>
							</td>
							<td class="value">
								<input id="m_member" resource="?member" rel="purl:member" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_note">Note:</label>
							</td>
							<td class="value" data-cardinality="1">
								<textarea rows="5" cols="40" id="m_note"
									property="purl:note">
								</textarea>
							</td>
						</tr>
					</tbody>
				</table>
				<input value="Save" type="submit" />
				<br />
			</fieldset>
		</form>
	</body>
</html>
