<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:purl="http://persistent.name/rdf/2010/purl#">
	<head>
		<title>Create a New Group</title>
	</head>
	<body>
		<form action="" about="" typeof="purl:Group">
			<fieldset>
				<legend>Create a New Group</legend>
				<p class="instructions">Fill in the following group information.</p>
				<table class="actiontable">
					<tbody>
						<tr>
							<td class="property">
								<label for="m_label">Name:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_label" property="purl:name" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_id">Group ID:</label>
							</td>
							<td class="value">
								<input id="m_id" type="text"
									onchange="$('base').attr('href', '/admin/group/' + value)" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_maintainer">Maintainers:</label>
							</td>
							<td class="value">
								<input id="m_maintainers" rel="purl:maintainer"	type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_member">Members:</label>
							</td>
							<td class="value">
								<input id="m_member" rel="purl:member" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_note">Public comments:</label>
							</td>
							<td class="value">
								<textarea id="m_note" propery="purl:note"></textarea>
							</td>
						</tr>
					</tbody>
				</table>
				<input value="Create" type="submit" />
				<br />
			</fieldset>
		</form>
	</body>
</html>
