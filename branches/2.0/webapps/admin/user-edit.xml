<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:purl="http://persistent.name/rdf/2010/purl#">
	<head>
		<title property="purl:name"/>
	</head>
	<body>
		<form action="">
			<fieldset>
				<legend>Modify a user</legend>
				<p class="instructions">Modify any of the following user information.</p>
				<table class="actiontable">
					<tbody>
						<tr>
							<td class="property">
								<label for="m_name">Full name:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_name" property="purl:name" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_affiliation">Affiliation:</label>
							</td>
							<td class="value">
								<input id="m_affiliation" property="purl:affiliation"
									type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_email">E-mail address:</label>
							</td>
							<td class="value">
								<input id="m_email" property="purl:mbox" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_passwd">Password:</label>
							</td>
							<td class="value">
								<input id="m_passwd" type="password"
									onchange="document.getElementById('m_algorithm').value='UTF-8';document.getElementById('m_encoded').value=value" />
								<input id="m_algorithm" property="purl:algorithm" type="hidden" />
								<input id="m_encoded" property="purl:encoded" type="hidden" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_passwd2">Re-enter password:</label>
							</td>
							<td class="value">
								<input id="m_passwd2" type="password" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_hint">Password hint:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_hint" property="purl:hint" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_justification">Justification:</label>
							</td>
							<td class="value">
								<textarea rows="5" cols="40" id="m_justification"
									property="purl:justification">
								</textarea>
							</td>
						</tr>
					</tbody>
				</table>
				<input value="Save" type="submit" />
				<br />
			</fieldset>
		</form>
	</body>
</html>
