<html xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
	xmlns:calli="http://callimachusproject.org/rdf/2009/framework#"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
	xmlns:purl="http://persistent.name/rdf/2010/purl#">
	<head>
		<title>Request a New User</title>
	</head>
	<body class="user">
		<form action="" about="" typeof="purl:User">
			<fieldset>
				<legend>Request a New User</legend>
				<p class="instructions">Fill in the following user information.</p>
				<table class="actiontable">
					<tbody>
						<tr>
							<td class="property">
								<label for="m_username">ID:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_username" type="text"
									onchange="$(form).attr('about', '/data/user/' + value)" property="calli:name" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_name">Full name:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_name" property="rdfs:label" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_affiliation">Affiliation:</label>
							</td>
							<td class="value">
								<input id="m_affiliation" property="purl:affiliation"
									type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_email">E-mail address:</label>
							</td>
							<td class="value">
								<input id="m_email" property="purl:mbox" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_passwd">Password:</label>
							</td>
							<td class="value">
								<input id="m_passwd" type="password"
									onchange="$('#m_algorithm').val('MD5');$('#m_encoded').val(hex_md5($('#m_username').val()+':'+$('#m_realm').val()+':'+value));$('#m_algorithm').change();$('#m_encoded').change();" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_passwd2">Re-enter password:</label>
							</td>
							<td class="value">
								<input id="m_passwd2" type="password" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_hint">Password hint:</label>
							</td>
							<td class="value" data-cardinality="1">
								<input id="m_hint" property="purl:hint" type="text" />
							</td>
						</tr>
						<tr>
							<td class="property">
								<label for="m_justification">Justification:</label>
							</td>
							<td class="value">
								<textarea rows="5" cols="40" id="m_justification"
									property="purl:justification">
								</textarea>
							</td>
						</tr>
						<tr class="hidden">
							<td class="property"/>
							<td class="value" data-cardinality="1">
								<input id="m_algorithm" property="calli:algorithm" type="hidden" />
							</td>
						</tr>
						<tr class="hidden">
							<td class="property"/>
							<td class="value" data-cardinality="1">
								<input id="m_encoded" property="calli:encoded" datatype="xsd:hexBinary" type="hidden" />
							</td>
						</tr>
						<tr class="hidden">
							<td class="property"/>
							<td class="value">
								<input id="m_realm" value="PURL" type="hidden" />
							</td>
						</tr>
					</tbody>
				</table>
				<input value="Create" type="submit" />
				<br />
			</fieldset>
		</form>
	</body>
</html>
